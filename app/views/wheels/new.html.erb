<h3>To create your personalized life balance wheel please select and answer the questions below.</h3><br>
<% if Rails.env.development? %>
	<button class='random'>Random answers</button>
<% end %>

<%= form_for @wheel do |f| %>

	<div id="accordion">

		<% Section.all.each do |s| %>
			<h3><%= s.section_name %></h3>
			
			<div>
				<% s.questions.each do |q| %>
			  	<div class='question'>
			 		<h4><%= q.question %></h4>
			 		<% q.answers.each do |a| %>
				 		<div class="answer_radio"><label>
				 			<div><%= a.answer_text %></div>
				 			<%= radio_button_tag "answer[#{q.id}]", a.id %>
				 		</label></div>
			 		<% end %>
			 	 </div>
		 		<% end %>
		 	</div>
		<% end %>
	</div>
	 
  	
  	<%= f.button "Create My Wheel", :class => "homeButton" %>

	<% if flash[:error] -%>
	      <%= flash[:error] %>
	<% end -%>

<% end %>